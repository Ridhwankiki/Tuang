<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp">


    <ImageView
        android:id="@+id/ivRecommended"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ayam"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvRecommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended"
        android:textColor="@color/red"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/ivRecommended"
        app:layout_constraintStart_toStartOf="@+id/ivRecommended"
        app:layout_constraintTop_toBottomOf="@+id/ivRecommended" />

</androidx.constraintlayout.widget.ConstraintLayout>